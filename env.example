# =================================
# Fast Data Agent - 环境配置模板
# =================================
# 复制此文件为 .env 并根据需要修改配置

# ========== 环境配置 ==========
ENVIRONMENT=development

# ========== 数据库配置 ==========
# PostgreSQL 连接配置
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/data_agent

# PostgreSQL 容器配置（如果使用 Docker）
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=data_agent
POSTGRES_PORT=5432

# ========== JWT 配置 ==========
SECRET_KEY=your-secret-key-here-change-in-production
REFRESH_SECRET_KEY=your-refresh-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== 应用配置 ==========
APP_NAME=Fast Data Agent
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ========== CORS 配置 ==========
ALLOWED_ORIGINS=["*"]

# ========== MinIO 对象存储配置 ==========
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123
MINIO_BUCKET=data-agent
MINIO_SECURE=false

# ========== 文件上传配置 ==========
MAX_UPLOAD_SIZE=104857600  # 100MB

# ========== AI/LLM 配置 ==========
OPENAI_API_KEY=sk-xxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# ========== Python 沙箱配置 ==========
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT=60
SANDBOX_MEMORY_LIMIT=512m

